generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id Int @id @default(autoincrement())
  name String
  url String
  apiVersion String
  status ServerStatus @default(online)
  healthy Boolean @default(true)
  cpuCores Int
  ramGB Float
  region ServerRegion
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ServerStatus{
  online
  offline
  maintenance
}

enum ServerRegion{
  India
  US_East
  Canada
}

model Admin {
  id Int @id @default(autoincrement())
  email String
  password String
  role AdminRole
}

enum AdminRole{
  basic
  master
}
