{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"types": ["../../packages/types/dist"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
